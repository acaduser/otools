				(princ (strcat "\n" lname " ã¯ä½œæˆã•ã‚Œã¾ã—ãŸã€‚"))
			)
		)
		(command "_.chprop" ss "" "la" lname "")
		(princ (strcat "\n" lname))
	)
	(defun *error*(s)
		(vla-EndUndoMark doc)
		(princ (strcat "\n" s))
		(princ)
	)
	(apply 'main nil)
